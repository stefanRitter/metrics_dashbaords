div(ng-controller="collectionsController as vm")
  a#upatelink(href="/ga") update

  .margin-top.center
    h2.margin-top 
      a(href="/weeks") Weekly
      | &nbsp;&nbsp;&nbsp;
      a.underline.italic(href="/collections") By Collection
      | &nbsp;&nbsp;&nbsp;
      a(href="/countries") By Country

  table.margin-top-big
    tr
      th(ng-click="vm.changeFilter('title')", ng-class="{'active': vm.orderFilter=='title', 'up': vm.orderFilterDirection}") Slug title
      th(ng-click="vm.changeFilter('views')", ng-class="{'active': vm.orderFilter=='views', 'up': vm.orderFilterDirection}") Views
      th(ng-click="vm.changeFilter('users')", ng-class="{'active': vm.orderFilter=='users', 'up': vm.orderFilterDirection}") Users
      th(ng-click="vm.changeFilter('avgTime')", ng-class="{'active': vm.orderFilter=='avgTime', 'up': vm.orderFilterDirection}") Avg. time
      th(ng-click="vm.changeFilter('bounceRate')", ng-class="{'active': vm.orderFilter=='bounceRate', 'up': vm.orderFilterDirection}") Bounce rate
      //th(ng-click="vm.changeFilter('bannerClicks')", ng-class="{'active': vm.orderFilter=='bannerClicks', 'up': vm.orderFilterDirection}") Banner clicks
      th(ng-click="vm.changeFilter('addStoryClicks')", ng-class="{'active': vm.orderFilter=='addStoryClicks', 'up': vm.orderFilterDirection}") Add Story clicks
      th(ng-click="vm.changeFilter('showAllStories')", ng-class="{'active': vm.orderFilter=='showAllStories', 'up': vm.orderFilterDirection}") Show all stories clicks
      th(ng-click="vm.changeFilter('pagination')", ng-class="{'active': vm.orderFilter=='pagination', 'up': vm.orderFilterDirection}") Pagination clicks
      th(ng-click="vm.changeFilter('showMoreClicks')", ng-class="{'active': vm.orderFilter=='showMoreClicks', 'up': vm.orderFilterDirection}") Show More clicks
      th(ng-click="vm.changeFilter('externalClicks')", ng-class="{'active': vm.orderFilter=='externalClicks', 'up': vm.orderFilterDirection}") External clicks
      th(ng-click="vm.changeFilter('otherNavigationClicks')", ng-class="{'active': vm.orderFilter=='otherNavigationClicks', 'up': vm.orderFilterDirection}") Prev/Next clicks
      //th(ng-click="vm.changeFilter('comments')", ng-class="{'active': vm.orderFilter=='comments', 'up': vm.orderFilterDirection}") Comments
      //th(ng-click="vm.changeFilter('upvotes')", ng-class="{'active': vm.orderFilter=='upvotes', 'up': vm.orderFilterDirection}") Upvotes
      //th(ng-click="vm.changeFilter('bookmarks')", ng-class="{'active': vm.orderFilter=='bookmarks', 'up': vm.orderFilterDirection}") Bookmarks
      th(ng-click="vm.changeFilter('twitterShares')", ng-class="{'active': vm.orderFilter=='twitterShares', 'up': vm.orderFilterDirection}") Tweets
      th(ng-click="vm.changeFilter('facebookShares')", ng-class="{'active': vm.orderFilter=='facebookShares', 'up': vm.orderFilterDirection}") FB shares
      th(ng-click="vm.changeFilter('linkedinShares')", ng-class="{'active': vm.orderFilter=='linkedinShares', 'up': vm.orderFilterDirection}") Linkedin shares
      //th(ng-click="vm.changeFilter('sharelineShares')", ng-class="{'active': vm.orderFilter=='sharelineShares', 'up': vm.orderFilterDirection}") Share lines
  
    tr(ng-repeat="collection in (vm.collections | orderBy: vm.orderFilter:vm.orderFilterDirection)")
      td
        a(href="//beta.iht.com{{collection.url}}", target="_blank") {{collection.title}}
      td {{collection.views}}
      td {{collection.users}}
      td {{collection.avgTime | duration}}
      td {{collection.bounceRate}}%
      //td {{collection.bannerClicks}}
      td {{collection.addStoryClicks}}
      td {{collection.showAllStories}}
      td {{collection.pagination}}
      td {{collection.showMoreClicks}}
      td {{collection.externalClicks}}
      td {{collection.otherNavigationClicks}}
      //td {{collection.comments}}
      //td {{collection.upvotes}}
      //td {{collection.bookmarks}}
      td {{collection.twitterShares}}
      td {{collection.facebookShares}}
      td {{collection.linkedinShares}}
      //td {{collection.sharelineShares}}
